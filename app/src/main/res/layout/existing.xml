                android:background="@drawable/chickens" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@+id/id1"
        android:layout_marginTop="2dp"
        android:background="@color/white"

        >

